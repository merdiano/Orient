<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:descendantFocusability="blocksDescendants"
    android:foreground="?android:selectableItemBackground"
    android:minHeight="?android:listPreferredItemHeight"
    android:paddingTop="@dimen/padding_normal"
    android:theme="@style/PlaidOverlay">

    <ImageView
        android:id="@+id/news_spacer"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignBottom="@+id/comment_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/spacing_normal"
        android:layout_marginLeft="@dimen/padding_normal"
        android:layout_marginRight="@dimen/spacing_normal"
        android:layout_marginStart="@dimen/padding_normal"
        android:contentDescription="@string/app_name"
        tools:ignore="UnknownId" />

    <TextView
        android:id="@+id/news_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/news_spacer"
        android:layout_toRightOf="@id/news_spacer"
        android:ellipsize="end"
        android:paddingRight="@dimen/padding_normal"
        android:paddingTop="@dimen/spacing_micro"
        android:textAppearance="@style/TextAppearance.CommentAuthor"
        tools:text="Nick B" />

    <ImageView
        android:id="@+id/ad_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/news_spacer"
        android:layout_marginTop="@dimen/padding_normal" />

