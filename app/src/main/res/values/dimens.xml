<resources>
    <!-- Default screen margins, per the Android Design guidelines. -->
    <dimen name="fab_margin">16dp</dimen>

    <!-- standard metrics -->
    <dimen name="spacing_normal">8dp</dimen>
    <dimen name="spacing_micro">4dp</dimen>
    <dimen name="spacing_large">32dp</dimen>
    <dimen name="spacing_huge">64dp</dimen>
    <dimen name="padding_normal">16dp</dimen>
    <dimen name="padding_large">24dp</dimen>
    <dimen name="fab_size">56dp</dimen>
    <dimen name="divider_height">1px</dimen>
    <dimen name="padding_room_for_fab">88dp</dimen> <!-- padding_normal + fab_size + padding_normal -->
    <!-- fab_size + padding_normal -->
    <!-- (fab_size / 2) + padding_normal -->
    <!-- 2 * ?android:actionBarSize -->
    <!-- text input layout seems to add 4dp of extra padding. The following account for this -->
    <dimen name="z_card">2dp</dimen>

    <!-- dialogs -->

    <!-- drawer -->
    <dimen name="drawer_width">@dimen/match_parent</dimen>

    <!-- grid -->
    <!-- 24dp icon + 2 * @dimen/spacing_normal -->

    <!-- Z-axis elevations -->
    <dimen name="z_app_bar">4dp</dimen>
    <dimen name="touch_raise">6dp</dimen>
    <dimen name="z_drawer">16dp</dimen>

    <!-- per https://developer.android.com/reference/android/view/ViewGroup.LayoutParams.html#MATCH_PARENT -->
    <item name="match_parent" format="integer" type="dimen">-1</item>

    <!-- avatar should be a 40dp asset in a 48dp touch target & optically aligned with standard padding -->
    <dimen name="avatar_size">40dp</dimen>
    <dimen name="avatar_bounds">48dp</dimen>
    <dimen name="avatar_padding">4dp</dimen> <!-- (avatar_bounds - avatar_size) / 2 -->
    <dimen name="avatar_margin">12dp</dimen> <!-- padding_normal - avatar_padding -->
    <dimen name="avatar_ripple_radius">20dp</dimen> <!-- avatar_size / 2 -->

    <!-- dribbble player -->
    <dimen name="large_avatar_size">120dp</dimen> <!-- 2 * actionBarSize - 2 * avatar_padding -->
    <!-- large_avatar_margin + large_avatar_size + avatar_margin -->

</resources>