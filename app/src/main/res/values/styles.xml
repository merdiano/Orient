<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="OrientTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:windowTranslucentNavigation">false</item>-->
        <!--<item name="android:windowTranslucentStatus">true</item>-->
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="OrientTheme.Launcher">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextAppearance.CommentAuthor" parent="@android:style/TextAppearance.Holo.Medium">
        <item name="android:fontFamily">sans-serif-medium</item>

        <item name="android:textSize">14sp</item>

    </style>

    <style name="TextAppearance.CommentAuthor.DesignerNews">
        <item name="android:textColor">@color/text_secondary_dark</item>
        <item name="android:fontFamily">@font/hermeneus_one_regular</item>
    </style>

    <style name="TextAppearance.Comment" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/text_secondary_dark</item>

        <!--<item name="@android:lineHeightHint">24sp</item>-->
        <!--<item name="android:letterSpacing">0.01</item>-->
    </style>

    <style name="TextAppearance.Filter" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/filter_text</item>
        <item name="android:fontFamily">@font/hermeneus_one_regular</item>
    </style>

    <style name="TextAppearance.DialogContent" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/text_secondary_dark</item>
        <item name="android:fontFamily">sans-serif-medium</item>

    </style>

    <style name="TextAppearance.EmptyText" parent="@style/TextAppearance.DialogContent">
        <item name="android:textColor">@color/text_primary_dark</item>
        <!--<item name="lineHeightHint">24sp</item>-->
    </style>

    <style name="OrientTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="OrientTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="TextAppearance.DribbbleShotTitle" parent="@android:style/TextAppearance.Large">
        <item name="android:fontFamily">@font/hermeneus_one_regular</item>
        <item name="android:textColor">@color/text_primary_dark</item>
    </style>
    <style name="TextAppearance.DribbbleShotDescription" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/text_tertiary_dark</item>
        <item name="android:fontFamily">@font/roboto_mono</item>
    </style>
    <style name="Widget.Plaid.InlineActionButton" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAppearance">@style/TextAppearance.CommentAuthor</item>
        <item name="android:drawablePadding">@dimen/spacing_micro</item>
        <item name="android:background">?android:selectableItemBackgroundBorderless</item>
    </style>
    <style name="TextAppearance.CommentTimestamp" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/hint_disabled_dark</item>
        <item name="android:textSize">14sp</item>

    </style>
    <style name="Widget.Plaid" parent="android:Widget" />
    <style name="Widget.Plaid.Toolbar">
        <item name="android:background">?android:colorPrimary</item>
        <item name="android:theme">@style/PlaidDarkOverlay</item>
    </style>
    <style name="Widget.Plaid.HomeToolbar" parent="Widget.Plaid.Toolbar">
        <item name="android:background">@drawable/bg_toolbar</item>
    </style>
    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/colorPrimaryDark</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>


</resources>
